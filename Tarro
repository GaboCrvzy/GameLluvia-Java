package com.tuempresa.gamelluvia;

import com.badlogic.gdx.graphics.Texture;

public class Tarro extends Entidad implements Colisionable
{

    // Estrategia de movimiento (Strategy)
    private EstrategiaMovimiento estrategiaMovimiento;

    public Tarro(float x, float y, float w, float h) 
    {
        super(new Texture("bucket.png"), x, y, w, h);
        
        // Estrategia por defecto (movimiento con teclado)
        this.estrategiaMovimiento = new MovimientoTeclado();
    }

    // Permite cambiar la forma de moverse en tiempo de ejecución
    public void setEstrategiaMovimiento(EstrategiaMovimiento estrategiaMovimiento)
    {
        this.estrategiaMovimiento = estrategiaMovimiento;
    }

    // Paso del Template Method
    @Override
    protected void mover(float dt) {
        if (estrategiaMovimiento != null) {
            estrategiaMovimiento.mover(this, dt);
        }
    }

    @Override
    public void onCollision(Entidad other) {
        // La lógica concreta se maneja en PantallaJuego
    }
}

