package com.tuempresa.gamelluvia;

import com.badlogic.gdx.Gdx;
import com.badlogic.gdx.Input;
import com.badlogic.gdx.graphics.Texture;

public class Tarro extends Entidad implements Colisionable
{

    private float velocidad = ConstantesJuego.VELOCIDAD_TARRO;

    public Tarro(float x, float y, float w, float h) {
        super(new Texture("bucket.png"), x, y, w, h);
    }

    // Aplicar el paso del Template Method
    @Override
    protected void mover(float dt) 
    {
        float nx = getX();

        if (Gdx.input.isKeyPressed(Input.Keys.LEFT) ||
            Gdx.input.isKeyPressed(Input.Keys.A)) {
            nx -= velocidad * dt;
        }

        if (Gdx.input.isKeyPressed(Input.Keys.RIGHT) ||
            Gdx.input.isKeyPressed(Input.Keys.D)) {
            nx += velocidad * dt;
        }

        // Mantener el tarro dentro del mundo
        setXLimites(nx, ConstantesJuego.ANCHO_MUNDO);
    }

    @Override
    public void onCollision(Entidad other) {
        // La l√≥gica concreta se maneja en PantallaJuego
    }
}
