

package com.tuempresa.gamelluvia;

import com.badlogic.gdx.graphics.Texture;

public class Lluvia extends Entidad implements Colisionable {

    private float velocidad;

    public Lluvia(float x, float y, float w, float h, float velocidad) {
        super(new Texture("drop.png"), x, y, w, h);
        this.velocidad = velocidad;
    }

    // Paso especifico del Template Method (como se mueve la gota)
    @Override
    protected void mover(float dt) {
        setY(getY() - velocidad * dt);
    }

    @Override
    protected void aplicarLimites() {setXLimites(getX(), ConstantesJuego.ANCHO_MUNDO);}

    public boolean fueraDePantalla() {
        return getY() + getHeight() < 0f;
    }

    @Override
    public void onCollision(Entidad other) {
        // La lógica de qué pasa al chocar se maneja en PantallaJuego.
    }
}
